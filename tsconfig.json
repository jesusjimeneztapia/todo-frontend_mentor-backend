{
	"compilerOptions": {
		"target": "ES5",
		"module": "CommonJS",
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", ".vscode"]
}
